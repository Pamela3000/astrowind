---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import SignUp from '~/components/widgets/SignUp.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Sign Up',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Sign Up" title="Let's Connect!" />

  <SignUp
    id="form"
    title="Sign Up"
    subtitle="Need help signing up? Check out our FAQ section."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Full Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email Address',
      },
      {
        type: 'password',
        name: 'password',
        label: 'Password',
      },
      {
        type: 'password',
        name: 'confirmPassword',
        label: 'Confirm Password',
      },
    ]}
    disclaimer={{
      label:
        'By submitting this form, you agree to our Terms of Service and Privacy Policy. Your personal information will be kept secure.',
    }}
    description="Once you sign up, you'll be able to access all our features and get started."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to account management, website navigation, payment issues, accessing purchased templates or general questions about the website's functionality.`,
      },
      {
        title: 'Contact sales',
        description:
          'Chat with us for questions about purchases, customization options, licensing for commercial use, inquiries about specific template, etc.',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues like template installation, problems editing difficulties, compatibility issues with software or download errors, or other technical challenges related to using the templates.',
      },
      {
        title: 'Phone',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contact@support.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
